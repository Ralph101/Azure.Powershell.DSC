{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "domainName": {
      "type": "string"
    },
    "location": {
      "type": "string"
    },
    "adminUsername": {
      "type": "string"
    },
    "adminPassword": {
      "type": "securestring"
    },
    "vmName-AZSWDOM01": {
      "type": "string"
    },
    "vmName-AZSWGW01": {
      "type": "string"
    },
    "numberOfRdshInstances": {
      "type": "int"
    },
    "vmName-AZSWRDSH": {
      "type": "string"
    },
    "GitHubLocation": {
      "type": "string"
    }
  },
  "resources": [
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(parameters('vmName-AZSWDOM01'),'/')]",
      "apiVersion": "2016-03-30",
      "location": "[parameters('location')]",
      "properties": {
        "publisher": "Microsoft.Powershell",
        "type": "DSC",
        "typeHandlerVersion": "2.21",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "modulesURL": "[parameters('GitHubLocation')]",
          "configurationFunction": "vm101-Config.ps1\\xRDSDeployment",
          "properties": {
            "domainName": "[parameters('domainName')]",
            "adminCreds": {
              "userName": "[parameters('adminUserName')]",
              "password": "privateSettingsRef:adminPassword"
            },
            "ConnectionBroker": "[parameters('vmName-AZSWDOM01')]",
            "WebAccessServer": "[parameters('vmName-AZSWGW01')]",
            "numberOfRdshInstances": "[parameters('numberOfRdshInstances')]",
            "sessionHostNamingPrefix": "[parameters('vmName-AZSWRDSH')]"
          }
        },
        "protectedSettings": {
          "items": {
            "adminPassword": "[parameters('adminPassword')]"
          }
        }
      }
    }
  ]
}
